{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "collapseloader",
    "version": "0.2.2",
    "identifier": "org.collapseloader",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "CollapseLoader",
                "width": 900,
                "height": 500,
                "minHeight": 400,
                "minWidth": 750
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
